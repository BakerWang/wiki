<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>html</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
   <fileSet>
    <directory>target/wikbook/src</directory>
    <outputDirectory>org.exoplatform.ks</outputDirectory>
    <includes>
      <include>**/*.xml</include>
     </includes>
    <!--excludes>
      <exclude>**/*.fo</exclude>
      <exclude>**/*.pdf</exclude>
    </excludes-->
   </fileSet>
   <fileSet>
    <directory>target/wikbook/tmp/images</directory>
    <outputDirectory>org.exoplatform.ks/images</outputDirectory>
    <includes>
      <include>**/*.png</include>
     </includes>
   </fileSet>
  </fileSets>
</assembly>
