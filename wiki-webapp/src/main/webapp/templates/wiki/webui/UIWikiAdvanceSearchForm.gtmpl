<%
  def rcontext = _ctx.getRequestContext() ;
  String inputId = uicomponent.TEXT;  
  //rcontext.getJavascriptManager().addJavascript("eXo.wiki.UIWikiAdvanceSearchForm.init(\"" + inputId + "\");");
  def requireJs = rcontext.getJavascriptManager().getRequireJS();
  requireJs.require("SHARED/wiki-view", "wikiView");
  requireJs.addScripts("wikiView.UIWikiAdvanceSearchForm.init(\"" + inputId + "\");");
%>

<div class="uiWikiAdvanceSearchForm">
	<% uiform.begin() %>
			<%uiform.renderChild("text")%>
			<% for(action in uicomponent.getActions()) { 
				String actionLabel = _ctx.appRes(uicomponent.getName() + ".action." + action); 
				String link = uicomponent.event(action) ;
		    %>
				<button type="button" class="btn btn-primary" type="button" onclick="$link">$actionLabel</button>
		    <%}%>
			<br />
			<%uiform.renderChild(uicomponent.WIKIS)%>
		    	     
	<% uiform.end() %>
</div>